#main
  .top-head.content
  .left.float-left
    %ul
      %li
        = link_to 'ホーム', root_path    
      %li
        = link_to 'スポーツ' , classrooms_category_path
      %li
        = link_to 'マンガ' , classrooms_category_path
      %li
        = link_to '音楽' , classrooms_category_path
