= form_for @classroom do |f|
  - if @classroom.errors.any?
    #error_explanation
      %h2= "#{pluralize(@classroom.errors.count, "error")} prohibited this classroom from being saved:"
      %ul
        - @classroom.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :カテゴリー
    = f.text_field :category
  .field
    = f.label :アイキャッチ画像
    = f.file_field :image_top
    = f.hidden_field :image_cache
  .field
    = f.label :タイトル
    = f.text_field :title
  .field
    = f.label :住所
    = f.text_field :adress
  .field
    = f.label :金額
    = f.text_field :payment
  .field
    = f.label :こんな人にオススメ
    %br
    = f.text_area :recommend
  .field
    = f.label :画像1
    = f.file_field :image_first
  .field
    = f.label :おすすめポイント1
    %br
    = f.text_area :point_first
  .field
    = f.label :画像2
    = f.file_field :image_second
  .field
    = f.label :オススメポイント2
    %br
    = f.text_area :point_second
  .actions
    = f.submit '教室登録'
